<div class="medium-5 medium-centered columns lightest-bg" id="feed" style="width: auto; margin-top: 10px; height: 100vh;">
  <div class="centered-text dark-color">
    <% @jobs.each_with_index do |job, index| %>
        <div class="medium-12 clearfix columns lightest-bg medium-centered rounded-border thin-border post" style="font-size: 14px; margin-top: 10px; margin-bottom: 10px;">
          <%= hidden_field( :address, :field, :value => job.address ) %>
          <%= hidden_field( :id, :field, :value => job.id ) %>
          <div class="medium-12 columns lighter-bg" style="border-bottom: solid; border-width: 2px">
            <%= job.title %> - Created by: <%= job.contractor.email %>
          </div>
          <div class="medium-5 columns" id="map-canvas-<%= index %>" style="height: 138px;">
          </div>
          <div class="medium-7 columns lighter-bg" style="border-left: solid; border-right: solid; border-width: 2px; text-align: left;">
            <div><%= "Hourly Rate: $#{Money.new(job.hourly_rate_cents).dollars}" %></div>
            <div><%= "Start Date: #{job.start_date}" %></div>
            <div><%= "Start Time: #{job.start_time}" %></div>
            <div><%= "End Time:#{job.end_time}" %></div>
          </div>
          <div class="medium-12 columns lighter-bg" style="border-top: solid; border-width: 2px; border-right: solid; border-left: solid;">
            <div><%= job.description %></div>
          </div>
        </div>
    <% end %>
  </div>
</div>
